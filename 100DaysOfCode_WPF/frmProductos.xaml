<Window x:Name="frmProductos" x:Class="_100DaysOfCode_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_100DaysOfCode_WPF"
        mc:Ignorable="d"
        Title="CRUD Productos" Height="250" Width="650" WindowStartupLocation="CenterScreen" Closing="frmProductos_Closing">
    <Grid>
        <GroupBox x:Name="groupBox" Header="Datos" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="200" Width="300" TabIndex="1">
            <Grid x:Name="gbxDatos" HorizontalAlignment="Left" Height="171" Margin="0,0,-2,0" VerticalAlignment="Top" Width="290">
                <Label x:Name="lblCodigo" Content="Código:" HorizontalAlignment="Left" Margin="126,4,0,0" VerticalAlignment="Top"/>
                <Label x:Name="lblNombre" Content="Nombre:" HorizontalAlignment="Left" Margin="126,31,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.474,2.077"/>
                <Label x:Name="kbkCantidad" Content="Cantidad:" HorizontalAlignment="Left" Margin="126,57,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.474,2.077"/>
                <Label x:Name="lblPrecio" Content="Precio:" HorizontalAlignment="Left" Margin="126,85,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.474,2.077"/>
                <TextBox x:Name="txtCodigo" HorizontalAlignment="Left" Height="23" Margin="195,6,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="85" TabIndex="1"/>
                <TextBox x:Name="txtNombre" HorizontalAlignment="Left" Height="23" Margin="195,33,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="85" TabIndex="2"/>
                <TextBox x:Name="txtCantidad" HorizontalAlignment="Left" Height="23" Margin="195,60,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="85" TabIndex="3"/>
                <TextBox x:Name="txtPrecio" HorizontalAlignment="Left" Height="23" Margin="195,87,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="85" TabIndex="4"/>
                <Button x:Name="btnAgregar" Content="Agregar" HorizontalAlignment="Left" Margin="126,118,0,0" VerticalAlignment="Top" Width="75" Click="btnAgregar_Click" TabIndex="6"/>
                <Button x:Name="btnModiicar" Content="Modificar" HorizontalAlignment="Left" Margin="205,118,0,0" VerticalAlignment="Top" Width="75" Click="btnModiicar_Click" TabIndex="7" IsEnabled="False"/>
                <Button x:Name="btnEliminar" Content="Eliminar" HorizontalAlignment="Left" Margin="126,143,0,0" VerticalAlignment="Top" Width="75" Click="btnEliminar_Click" TabIndex="8" IsEnabled="False"/>
                <Button x:Name="btnBuscar" Content="Buscar" HorizontalAlignment="Left" Margin="206,143,0,0" VerticalAlignment="Top" Width="75" Click="btnBuscar_Click" TabIndex="9"/>
                <Button x:Name="btnSubirImagen" Content="Subir imagen" HorizontalAlignment="Left" Margin="10,118,0,0" VerticalAlignment="Top" Width="100" Click="btnSubirImagen_Click" TabIndex="5"/>
                <Image x:Name="image" HorizontalAlignment="Left" Height="100" Margin="10,10,0,0" VerticalAlignment="Top" Width="100"/>
                <Label x:Name="lblNoDisponible" Content="No Disponible" HorizontalAlignment="Left" Margin="15,45,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.474,2.077" FontWeight="Bold" Visibility="Hidden"/>
            </Grid>
        </GroupBox>
        <GroupBox x:Name="gbxRegistros" Header="Registros" HorizontalAlignment="Left" Margin="315,10,0,0" VerticalAlignment="Top" Height="200" Width="317" TabIndex="2">
            <DataGrid x:Name="dgRegistros" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="284" Height="170" IsReadOnly="True" MouseLeftButtonDown="dgRegistros_MouseLeftButtonDown" TabIndex="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding codigo}" ClipboardContentBinding="{x:Null}" Header="Código" Width="100"/>
                    <DataGridTextColumn Binding="{Binding nombre}" ClipboardContentBinding="{x:Null}" Header="Nombre" Width="120"/>
                    <DataGridTextColumn Binding="{Binding cantidad}" ClipboardContentBinding="{x:Null}" Header="Cantidad" Width="60"/>
                    <DataGridTextColumn Binding="{Binding precio}" ClipboardContentBinding="{x:Null}" Header="Precio" Width="60"/>
                    <DataGridTextColumn Binding="{Binding rutaImagen}" ClipboardContentBinding="{x:Null}" Header="RutaImagen" Width="130"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

    </Grid>
</Window>
